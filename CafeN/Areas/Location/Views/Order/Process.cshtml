@model IEnumerable<CafeN.Models.ViewModel.OrderViewModel>

@{
    ViewBag.Title = ViewBag.LocationName + "'s Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.LocationName's Orders.</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickUpAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletedAt)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PickUpAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedAt)
            </td>

            <td>
                @*            @Html.ActionLink("Edit", "Edit", new { id=item.OrderID }) |
            @Html.ActionLink("Details", "Details", new { id=item.OrderID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrderID })*@
                @Html.ActionLink("Start", "Start", new { id=item.OrderID })
            </td>
        </tr>
    }
</table>
